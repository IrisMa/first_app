source 'https://rubygems.org'

gem 'rails', '3.2.6'
gem 'bootstrap-sass'
gem 'bcrypt-ruby'


group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'

  gem 'guard-spork'
  gem 'spork'
end

group :development do
  gem 'annotate', '2.5.0'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'


  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'

  gem 'rb-inotify'
  gem 'libnotify'
end

group :production do
  gem 'pg'
end
